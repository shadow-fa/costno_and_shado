waitUntil {sleep 0.5; !isNil "objectives"};
waitUntil {sleep 0.5; !isNil "objectives_done"};
waitUntil {sleep 0.5; !isNil "objectives_and_fakes"};
waitUntil {count objectives > 0};

//spawn AI (isServer check inside sqf file)
objectives_and_fakes execVM "ai_spawning.sqf";
//------------------------------------------------------------------------------
//spawn loop to check if objectives are alive
if (isServer) then {
	[] spawn {
		waitUntil {sleep 1; time > 15};
		private _ending = -1;
		while {_ending == -1} do {
			//check endings
			if (count objectives == ({_x == 1} count objectives_done)) then {
				//success
				_ending = 1;
			};
			//everyone died
			if (0 == ({alive _x && (side _x == resistance)} count playableUnits)) then {
				if( ({_x == 1} count objectives_done) > 0) then {
					//partial success
					_ending = 2;
				}
				else{
					//failure
					_ending = 3;
				}
			};
			sleep 2;
		};
		[_ending] call f_fnc_MpEnd;
	};
};
